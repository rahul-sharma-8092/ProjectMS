@model IEnumerable<ProjectMS.Models.Setting.UserGroupsModel>

@{
    ViewData["Title"] = "UserGroups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div class="mb-1 mt-2 d-flex justify-content-between align-items-center pr-2">
        <ol class="breadcrumb d-inline-block border-0 m-0">
            <li class="breadcrumb-item"><a asp-action="UserGroups" asp-controller="Setting">User Groups</a></li>
        </ol>
        <a asp-action="AddEditUserGroups" asp-asp-controller="Setting" class="float-end btn btn-primary">
            Add Groups
        </a>
    </div>

    <table class="table table-hover table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.GroupId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="d-none"></th>
                <th class="text-center">
                    No. of Users
                </th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.GroupId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.NoOfUserAssociated)
                    </td>
                    <td class="text-center d-none group-id">
                        @Html.DisplayFor(modelItem => item.GId)
                    </td>
                    <td class="text-center">
                        @Html.DropDownList($"ddlAction_{item.GroupId}",
                                 ViewBag.ddlAction,
                                 "Action",
                                 htmlAttributes: new { @class = "btn btn-outline-dark dropdown-toggle", onchange = "ddlActionChnage(this)" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script src="~/js/setting/usergroups.js"></script>
}